<!-- hcal_structure.inc, hcal structure -->

<!-- hcal slices -->
<volume name="Poly">	
  <materialref ref="Polystyrene" />
  <solidref ref="PolyBox" />
  <sdref ref="HCSD" />
  <visref ref="HcalVis" />
</volume>

<volume name="Steel">
  <materialref ref="Steel235" />
  <solidref ref="SteelBox" />
  <visref ref="HcalVis" />
</volume>

<volume name="AirGap">
  <materialref ref="Air" />
  <solidref ref="AirBox" />
  <visref ref="HcalVis" />
</volume>

<volume name="SteelCassette">
  <materialref ref="Steel235" />
  <solidref ref="SteelCassetteBox" />
  <visref ref="HcalVis" />
</volume>

<volume name="Foil">
  <materialref ref="Air" />
